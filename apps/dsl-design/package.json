{
  "name": "@ui8kit/resta-dsl-design",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "generate": "bun run ../../packages/generator/src/cli/generate.ts react --cwd .",
    "finalize": "bun run scripts/finalize-dist.ts",
    "dist:app": "bun run blueprint:scan && bun run blueprint:validate && bun run generate && bun run finalize && bun run typecheck:react",
    "blueprint:scan": "bunx ui8kit-generate blueprint:scan --cwd .",
    "blueprint:validate": "bunx ui8kit-generate blueprint:validate --cwd .",
    "blueprint:graph": "bunx ui8kit-generate blueprint:graph --cwd .",
    "typecheck": "bunx tsc --noEmit",
    "typecheck:react": "cd ../react-design && bun run typecheck"
  },
  "dependencies": {
    "@ui8kit/dsl": "^0.1.0",
    "@ui8kit/sdk": "^0.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.460.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.0.1",
    "tailwind-merge": "^3.4.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.8.0",
    "vite": "^6.3.5"
  }
