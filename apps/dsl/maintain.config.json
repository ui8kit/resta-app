{
  "$schema": "../../packages/maintain/schemas/maintain.config.schema.json",
  "root": ".",
  "reportsDir": ".cursor/reports",
  "continueOnError": true,
  "maxParallel": 2,
  "checkers": {
    "refactorAudit": {
      "mapping": "scripts/schemas/brand-mapping.json",
      "scope": [
        "src",
        "fixtures"
      ],
      "maxMatchesPerEntry": 10
    },
    "invariants": {
      "routes": {
        "appFile": "src/App.tsx",
        "required": [
          "/",
          "/menu",
          "/menu/:slug",
          "/recipes",
          "/recipes/:slug",
          "/blog",
          "/blog/:slug",
          "/promotions",
          "/promotions/:slug",
          "/admin",
          "/admin/dashboard"
        ]
      },
      "fixtures": {
        "pageFile": "fixtures/shared/page.json",
        "requiredPageDomains": [
          "website",
          "admin"
        ]
      },
      "blocks": {
        "dir": "src/blocks",
        "indexFile": "src/blocks/index.ts",
        "recursive": true
      },
      "context": {
        "file": "src/data/adapters/fixtures.adapter.ts",
        "requiredSymbols": [
          "loadFixturesContextInput"
        ]
      }
    },
    "fixtures": {
      "targets": [
        {
          "file": "fixtures/landing.json",
          "schema": "schemas/canonical/landing.schema.json"
        },
        {
          "file": "fixtures/shared/site.json",
          "schema": "schemas/canonical/site.schema.json"
        },
        {
          "file": "fixtures/shared/navigation.json",
          "schema": "schemas/canonical/navigation.schema.json"
        },
        {
          "file": "fixtures/shared/page.json",
          "schema": "schemas/canonical/page.schema.json"
        }
      ]
    },
    "viewExports": {
      "pattern": "src/**/*View.tsx",
      "exportShape": "interface+function"
    },
    "contracts": {
      "blueprint": "blueprint.json",
      "appFile": "src/App.tsx"
    },
    "dataClassConflicts": {
      "scope": ["src"],
      "pattern": "**/*.tsx",
      "ignoreDataClasses": ["wrapper"]
    },
    "componentTag": {
      "scope": ["src"],
      "pattern": "**/*.tsx",
      "tagMapPath": null
    },
    "colorTokens": {
      "scope": ["src"],
      "pattern": "**/*.tsx",
      "tokenSource": "utility-props.map",
      "utilityPropsMapPath": "./src/lib/utility-props.map.ts"
    },
    "genLint": {
      "scope": ["src/blocks", "src/layouts", "src/partials"],
      "pattern": "**/*.tsx",
      "rules": {
        "GEN001": "error",
        "GEN002": "error",
        "GEN003": "warn",
        "GEN004": "error",
        "GEN005": "warn",
        "GEN006": "error",
        "GEN007": "error",
        "GEN008": "warn"
      }
    },
    "clean": {
      "paths": ["../react", "node_modules/.vite"],
      "pathsByMode": {
        "full": ["node_modules", "../react"],
        "dist": ["../react", "node_modules/.vite"]
      },
      "includeTsBuildInfo": true
    }
  }
}
