{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ui8kit.local/schemas/canonical/guide-item.schema.json",
  "title": "Canonical Guide Item",
  "type": "object",
  "required": ["id", "slug", "title", "excerpt", "body", "image", "date"],
  "properties": {
    "id": { "type": "string" },
    "slug": { "type": "string" },
    "title": { "type": "string" },
    "excerpt": { "type": "string" },
    "body": { "type": "string" },
    "image": { "$ref": "./shared-types.schema.json#/$defs/Image" },
    "date": { "type": "string", "format": "date-time" },
    "category": { "$ref": "./shared-types.schema.json#/$defs/Category" },
    "linkedMenuItemId": { "type": "string" },
    "difficulty": { "type": "string", "enum": ["easy", "medium", "hard"] },
    "cookTime": { "$ref": "#/$defs/CookTime" },
    "servings": { "type": "integer", "minimum": 1 },
    "ingredients": {
      "type": "array",
      "items": { "$ref": "#/$defs/Ingredient" }
    },
    "steps": {
      "type": "array",
      "items": { "$ref": "#/$defs/RecipeStep" }
    },
    "tags": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "nutrition": { "$ref": "#/$defs/Nutrition" }
  },
  "$defs": {
    "Ingredient": {
      "type": "object",
      "required": ["id", "amount", "unit", "name"],
      "properties": {
        "id": { "type": "string" },
        "amount": { "type": "number", "minimum": 0 },
        "unit": { "type": "string" },
        "name": { "type": "string" },
        "note": { "type": "string" }
      },
      "additionalProperties": false
    },
    "RecipeStep": {
      "type": "object",
      "required": ["id", "step", "body"],
      "properties": {
        "id": { "type": "string" },
        "step": { "type": "integer", "minimum": 1 },
        "title": { "type": "string" },
        "body": { "type": "string" }
      },
      "additionalProperties": false
    },
    "CookTime": {
      "type": "object",
      "required": ["prep", "cook", "total"],
      "properties": {
        "prep": { "type": "integer", "minimum": 0 },
        "cook": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "Nutrition": {
      "type": "object",
      "required": ["calories", "protein", "fat", "carbs"],
      "properties": {
        "calories": { "type": "number", "minimum": 0 },
        "protein": { "type": "number", "minimum": 0 },
        "fat": { "type": "number", "minimum": 0 },
        "carbs": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
