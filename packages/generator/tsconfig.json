{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["node", "bun"],
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui8kit/sdk": ["../sdk/src/index.ts"],
      "@ui8kit/sdk/config": ["../sdk/src/config.ts"],
      "@ui8kit/dsl": ["../dsl/src/index.ts"],
      "@ui8kit/lint": ["../lint/src/index.ts"],
      "@ui8kit/contracts": ["../contracts/src/index.ts"],
      "@ui8kit/core": ["src/stub/core.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "templates", "test"]
}
