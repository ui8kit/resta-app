{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ui8kit.local/schemas/maintain.config.schema.json",
  "title": "UI8Kit Maintain Config",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "checkers"
  ],
  "properties": {
    "root": {
      "type": "string"
    },
    "reportsDir": {
      "type": "string",
      "default": ".cursor/reports"
    },
    "continueOnError": {
      "type": "boolean",
      "default": true
    },
    "maxParallel": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "checkers": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "refactorAudit": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "mapping",
            "scope"
          ],
          "properties": {
            "mapping": {
              "type": "string"
            },
            "scope": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "maxMatchesPerEntry": {
              "type": "integer",
              "minimum": 1,
              "default": 10
            }
          }
        },
        "invariants": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "routes",
            "fixtures",
            "blocks",
            "context"
          ],
          "properties": {
            "routes": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "appFile",
                "required"
              ],
              "properties": {
                "appFile": {
                  "type": "string"
                },
                "required": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "fixtures": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "pageFile",
                "requiredPageDomains"
              ],
              "properties": {
                "pageFile": {
                  "type": "string"
                },
                "requiredPageDomains": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "blocks": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "dir",
                "indexFile"
              ],
              "properties": {
                "dir": {
                  "type": "string"
                },
                "indexFile": {
                  "type": "string"
                },
                "recursive": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "context": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "file"
              ],
              "properties": {
                "file": {
                  "type": "string"
                },
                "requiredSymbols": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "fixtureImportPattern": {
                  "type": "string"
                }
              }
            }
          }
        },
        "fixtures": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "targets"
          ],
          "properties": {
            "targets": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "file",
                  "schema"
                ],
                "properties": {
                  "file": {
                    "type": "string"
                  },
                  "schema": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "viewExports": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "pattern",
            "exportShape"
          ],
          "properties": {
            "pattern": {
              "type": "string"
            },
            "exportShape": {
              "type": "string",
              "enum": [
                "interface+function"
              ]
            }
          }
        },
        "contracts": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "blueprint"
          ],
          "properties": {
            "blueprint": {
              "type": "string"
            },
            "appFile": {
              "type": "string"
            }
          }
        },
        "clean": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "paths"
          ],
          "properties": {
            "paths": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "includeTsBuildInfo": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  }
}
