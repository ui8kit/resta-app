{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ui8kit.local/schemas/maintain.config.schema.json",
  "title": "UI8Kit Maintain Config",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "checkers"
  ],
  "properties": {
    "root": {
      "type": "string"
    },
    "reportsDir": {
      "type": "string",
      "default": ".cursor/reports"
    },
    "continueOnError": {
      "type": "boolean",
      "default": true
    },
    "maxParallel": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "checkers": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "refactorAudit": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "mapping",
            "scope"
          ],
          "properties": {
            "mapping": {
              "type": "string"
            },
            "scope": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "maxMatchesPerEntry": {
              "type": "integer",
              "minimum": 1,
              "default": 10
            }
          }
        },
        "invariants": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "routes",
            "fixtures",
            "blocks",
            "context"
          ],
          "properties": {
            "routes": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "appFile",
                "required"
              ],
              "properties": {
                "appFile": {
                  "type": "string"
                },
                "required": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "fixtures": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "pageFile",
                "requiredPageDomains"
              ],
              "properties": {
                "pageFile": {
                  "type": "string"
                },
                "requiredPageDomains": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "blocks": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "dir",
                "indexFile"
              ],
              "properties": {
                "dir": {
                  "type": "string"
                },
                "indexFile": {
                  "type": "string"
                },
                "recursive": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "context": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "file"
              ],
              "properties": {
                "file": {
                  "type": "string"
                },
                "requiredSymbols": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "fixtureImportPattern": {
                  "type": "string"
                }
              }
            }
          }
        },
        "fixtures": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "targets"
          ],
          "properties": {
            "targets": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "file",
                  "schema"
                ],
                "properties": {
                  "file": {
                    "type": "string"
                  },
                  "schema": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "viewExports": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "pattern",
            "exportShape"
          ],
          "properties": {
            "pattern": {
              "type": "string"
            },
            "exportShape": {
              "type": "string",
              "enum": [
                "interface+function"
              ]
            }
          }
        },
        "contracts": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "blueprint"
          ],
          "properties": {
            "blueprint": {
              "type": "string"
            },
            "appFile": {
              "type": "string"
            },
            "entityTypeRequireInlineBody": {
              "type": "boolean",
              "description": "When false, entity types may be aliases; required-fields check skipped. Strict shape applies only to *View.tsx."
            }
          }
        },
        "clean": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "paths"
          ],
          "properties": {
            "paths": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              },
              "description": "Paths to clean (relative to app root). Fallback when pathsByMode doesn't define the mode."
            },
            "pathsByMode": {
              "type": "object",
              "properties": {
                "full": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Paths for full cleanup (node_modules, outDir, etc.)"
                },
                "dist": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Paths for dist-only cleanup (generated output, .vite cache)"
                }
              },
              "description": "Optional paths per mode. Overrides paths when mode matches."
            },
            "includeTsBuildInfo": {
              "type": "boolean",
              "default": true
            }
          }
        },
        "dataClassConflicts": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "scope",
            "pattern"
          ],
          "properties": {
            "scope": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "pattern": {
              "type": "string"
            },
            "ignoreDataClasses": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "componentTag": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "scope",
            "pattern"
          ],
          "properties": {
            "scope": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "pattern": {
              "type": "string"
            },
            "tagMapPath": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        },
        "colorTokens": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "scope",
            "pattern",
            "utilityPropsMapPath"
          ],
          "properties": {
            "scope": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "pattern": {
              "type": "string"
            },
            "tokenSource": {
              "type": "string",
              "enum": [
                "utility-props.map"
              ]
            },
            "utilityPropsMapPath": {
              "type": "string"
            }
          }
        },
        "genLint": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "scope",
            "pattern"
          ],
          "properties": {
            "scope": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "pattern": {
              "type": "string"
            },
            "rules": {
              "type": "object",
              "additionalProperties": {
                "type": "string",
                "enum": [
                  "error",
                  "warn",
                  "info"
                ]
              },
              "properties": {
                "GEN001": { "type": "string", "enum": ["error", "warn", "info"] },
                "GEN002": { "type": "string", "enum": ["error", "warn", "info"] },
                "GEN003": { "type": "string", "enum": ["error", "warn", "info"] },
                "GEN004": { "type": "string", "enum": ["error", "warn", "info"] },
                "GEN005": { "type": "string", "enum": ["error", "warn", "info"] },
                "GEN006": { "type": "string", "enum": ["error", "warn", "info"] },
                "GEN007": { "type": "string", "enum": ["error", "warn", "info"] },
                "GEN008": { "type": "string", "enum": ["error", "warn", "info"] }
              }
            }
          }
        }
      }
    }
  }
}
